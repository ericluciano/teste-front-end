.about
  width 100%
  padding 8% 0 0 0
  box-sizing border-box
  .content-one
    flexbox(flex)
    justify-content(space-between)
    flex-wrap(wrap)
    align-items(flex-start)
    margin-bottom 10%
    .content
      width 100%
      padding 4% 5% 0 5%
      text-align justify
      box-sizing border-box
      min-width convertpxtorem(320)
      @media only screen and (min-width:$screen-md)
        width 49%
    .image-background
      width 100%
      text-align right
      img
        width 100%
        height auto
        max-width 668px
      @media only screen and (min-width:$screen-md)
        width 50%
        max-width 668px

  .content-two
    flexbox(flex)
    justify-content(space-between)
    flex-wrap(wrap)
    align-items(center)
    max-width $screen-xs
    margin 0 auto
    overflow hidden
    box-sizing border-box
    padding-right 5%
    @media only screen and (min-width:$screen-xs)
      max-width $screen-sm
    @media only screen and (min-width:$screen-sm)
      max-width $screen-md
    @media only screen and (min-width:$screen-md)
      max-width 1148px
    .content
      position relative
      flexbox(flex)
      order 1
      width 100%
      text-align justify
      padding 0 5%
      margin-bottom 10%
      box-sizing border-box
      @media only screen and (min-width:$screen-sm)
        width 49%
        padding-left 5%
        padding-right 0
      @media only screen and (min-width:$screen-md)
        width 49%
        text-align justify
        box-sizing border-box
        flexbox(flex)
        justify-content(center)
        align-items(center)
        flex-direction(column)
        order 2
        padding 0
        margin-bottom 0

    .image-background
      flexbox(flex)
      width 100%
      order 2
      padding-left 10px
      box-sizing border-box
      @media only screen and (min-width:$screen-sm)
        flexbox(flex)
        width 49%
        max-width 468px
        text-align center
        order 1
      img
        width 100%
        height 30%
        max-height 444px
        max-width 468px
        margin 0 auto
        padding-left 8vw
        @media only screen and (min-width:$screen-lg)
          width 100%
          height 60vh
          padding-left 0
          margin-left -28px
