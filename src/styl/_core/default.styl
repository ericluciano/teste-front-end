.font-dosis
  font-family "Dosis", sans-serif
  font-config()
  font-weight normal
  font-style normal
  font-stretch normal

.font-releway
  font-family "Releway", sans-serif
  font-config()
  font-weight normal
  font-style normal
  font-stretch normal

/* font weight - return class .fw-name */
fw(bold 500 600 800)

/* font size fs-size return class .fs-size */
fs(13 14 20 24 40)

/* colors return class .color-name */
set-color('default' 'green' 'white' 'gray')

/* text return class text-name type: upper, lower or aligns */
set-text('left' 'center' 'right' 'upper' 'lower')

/* background color */
bg('green' 'green-1' 'white' 'white-1')

/* line letters */
line-letter(1, 1.71, 0.8)
line-letter(2, 1, 5.6)
line-letter(3, 1.71, 1.4)
line-letter(4, 1, 3.4)
line-letter(5, 1.71, 2.1)
line-letter(6, 0.92, 3.4)
line-letter(7, 1.57, 2.1)
line-letter(8, 1.57, 2)
line-letter(9, 1.2, 2.8)
line-letter(10, 1.69, 1.8)

/* margins */
.mt-0
  margin-top 0
.mb-0
  margin-bottom 0
.mb-51
  margin-bottom 51px

