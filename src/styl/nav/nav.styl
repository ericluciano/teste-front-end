.open-menu
  width 30px
  height 20px
  position relative
  transform rotate(0deg)
  transition .5s ease-in-out
  cursor pointer
  span
    display block
    position absolute
    height 2px
    width 100%
    background $gray
    border-radius 9px
    opacity 1
    left 0
    transform rotate(0deg)
    transition .25s ease-in-out
  span:nth-child(1)
    top 0
  span:nth-child(2)
    top 9px
  span:nth-child(3)
    top 18px

  &.active
    span:nth-child(1)
      top 8px
      transform rotate(135deg)
    span:nth-child(2)
      opacity 0
      left -60px
    span:nth-child(3)
      top 8px
      transform rotate(-135deg)

  @media only screen and (min-width:$screen-md)
    display none

.nav-fixed-top
  background $white
  box-shadow 0 6px 12px 0 rgba(0, 0, 0, 0.176)
  animation slide-in-top 0.5s cubic-bezier(0.250, 0.460, 0.450, 0.940) both
  top 0
  max-width 100vw

nav
  position fixed
  flexbox(flex)
  justify-content(space-between)
  align-items(center)
  box-sizing border-box
  width 100%
  max-width 100vw
  padding 0 4%
  z-index 100
  ul
    position fixed
    z-index 20
    top 74px
    left -60vw
    padding-top 2%
    flexbox(flex)
    flex-direction(column)
    align-items(start)
    justify-content(start)
    width 60vw
    min-height 100vh
    background $white
    opacity 0
    visibility hidden
    will-change opacity, left, visibility
    transition-timing-function linear
    transition-duration .2s, .2s, .2s
    transition-property opacity, left, visibility
    &.active
      left 0
      opacity 1
      visibility visible
      box-shadow 5px 0 5px -5px rgba(0, 0, 0, 0.176)
      border-top 1px solid $green

    @media only screen and (min-width $screen-md)
      position unset
      top 0
      width 369px
      list-style none
      padding 0
      flexbox(flex)
      justify-content(space-around)
      align-items(center)
      flex-direction(row)
      min-height 80px
      visibility visible
      opacity 1
      background none
    li
      padding 2% 14%
      box-sizing border-box
      a
        text-decoration none
      &:hover
        text-decoration underline
      @media only screen and (min-width:$screen-md)
        padding 0
    @media only screen and (min-width:$screen-md)
      padding 0
